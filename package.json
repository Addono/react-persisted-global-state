{
  "name": "react-persisted-global-state",
  "description": "Simple React hook for global, local storage persisted state.",
  "version": "0.2.0",
  "license": "MIT",
  "keywords": [
    "react",
    "hooks",
    "state",
    "global",
    "persist",
    "local-storage"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-use": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Adriaan Knapen",
  "module": "dist/react-persisted-global-state.esm.js",
  "size-limit": [
    {
      "path": "dist/react-persisted-global-state.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-persisted-global-state.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@size-limit/preset-small-lib": "^8.1.2",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addons": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "babel-loader": "^9.1.2",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "react-use": "^17.4.0",
    "release-it": "^15.6.0",
    "size-limit": "^8.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": ">=4.1.1",
    "**/@typescript-eslint/parser": ">=4.1.1"
  }
}
