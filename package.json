{
  "name": "react-persisted-global-state",
  "description": "Simple React hook for global, local storage persisted state.",
  "version": "1.0.1",
  "license": "MIT",
  "keywords": [
    "react",
    "hooks",
    "state",
    "global",
    "persist",
    "local-storage"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-use": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Adriaan Knapen",
  "module": "dist/react-persisted-global-state.esm.js",
  "size-limit": [
    {
      "path": "dist/react-persisted-global-state.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-persisted-global-state.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@storybook/addon-essentials": "^7.0.23",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^8.1.1",
    "@storybook/addons": "^7.0.23",
    "@storybook/react": "^7.0.23",
    "@storybook/react-webpack5": "^7.4.5",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "babel-loader": "^9.1.3",
    "husky": "^8.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "react-use": "^17.5.0",
    "release-it": "^16.3.0",
    "size-limit": "^8.2.6",
    "storybook": "^7.6.13",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^4.9.5"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": ">=4.1.1",
    "**/@typescript-eslint/parser": ">=4.1.1"
  }
}
